<%= simple_form_for([@publication, @publication.comments.build]) do |f| %>
  <div id="comment-form">
    <%= f.input :rating %>
  </div>
  <%= f.input :commentaire %>
  <%= f.button :submit %>
<% end %>

<script>
  $('comment-form').raty({
    path: '/assets/',
    scoreName: 'comment[rating]'
  });
</script>
