<div class="col-md-6 col-md-offset-3">
  <div class="edit-publication-form" >

    <h2> Edit <%= @publication.title %> </h2>

    <%= simple_form_for @publication, :html => { :multipart => true } do |f| %>
      <%= f.input :title %>
      <%= f.select :town_id, @towns %>
      <%= f.file_field :publication_img %>
      <%= f.input :publication_type %>
      <%= f.input :text %>
      <%= f.button :submit, :class => "btn btn-custom2" %>
    <% end %>

  </div>
  <br>
  <p> <%= link_to "Back", root_path, class: "btn btn-custom" %> </p>

</div>
