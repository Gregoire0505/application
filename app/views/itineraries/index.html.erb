
<div class="row">
  <h1> Itineraries available </h1>
    <div class="itineraries" >
      <div class="col-md-6">

        <% @itineraries.each do |itinerary| %>
          <div class="itinerary">
            <div class="itinerary-title"> <a href="/itineraries/<%= itinerary.id %>"> <%= itinerary.name %> </a> </div>
            <p class="itinerary-description"> <%= itinerary.description %> </p>
          </div>
        <% end %>
      </div>
      
      <div class="col-md-6">
        <div class="new-itinerary">
          <h2> Create a new itinerary ? </h2>
          <p class="button"> <%= link_to "New Itinerary", new_itinerary_path, class: "btn btn-custom" %> </p>
        </div>
      </div>

  </div>
</div>
